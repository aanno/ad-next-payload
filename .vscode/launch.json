{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  // https://nextjs.org/docs/pages/building-your-application/configuring/debugging
  // https://github.com/vercel/next.js/issues/62008
  // https://nodejs.org/en/docs/inspector
  "version": "0.2.0",
  "configurations": [
    // not working (breakpoints in ts are not recognized)
    {
      "name": "Next.js: debug server-side",
      "command": "pnpm dev",
      "request": "launch",
      "type": "node-terminal",
      "preLaunchTask": "pnpm transpile",
      "trace": true,
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack://_N_E/*": "${workspaceFolder}/out/*",
        "${workspaceFolder}/.next/static/chunks/*": "${workspaceFolder}/out/*",
        "${workspaceFolder}/.next/server/vendor-chunks/*": "${workspaceFolder}/out/*",
      },
      "outFiles": [
        "${workspaceFolder}/.next/static/chunks/**/*.js",
        "${workspaceFolder}/.next/server/vendor-chunks/**/*.js",
      ]
    },
    // not working (compile error with 'Package XXX (serverExternalPackages or default list) can't be external')
    {
      "name": "Next.js: debug turbo server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm run dev --turbo",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        // "/turbopack/[project]/*": "${webRoot}/*",
        "/turbopack/[project]/*": "${workspaceFolder}/*"
      }
    },
    {
      "name": "Next.js: launch debug chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    // needs a special started browser with
    // --remote-debugging-port=9222 --user-data-dir=remote-debug-profile
    // see https://code.visualstudio.com/docs/nodejs/browser-debugging
    {
      "name": "Next.js: attach debug chrome",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    },
    // not working (server breakpoints in ts are not recognized, error to find
    // 'ad-next-payload/.next/server/vendor-chunks/script.js.map')
    {
      "name": "Next.js: debug full stack",
      "type": "node",
      "request": "launch",
      // "program": "${workspaceFolder}/node_modules/.bin/next",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "runtimeArgs": [
        "--inspect"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "serverReadyAction": {
        "action": "debugWithChrome",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}"
      },
    },
  ],
}
